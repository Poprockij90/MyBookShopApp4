<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="addColumnDescrToAuthors" author="">
        <addColumn tableName="authors">
            <column name="description" type="TEXT"/>
        </addColumn>
    </changeSet>

    <changeSet id="addColumnsToBooksTable" author="Andryshik">
        <addColumn tableName="books">
            <column name="is_bestseller" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="slug" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="discount" type="BIGSERIAL" defaultValue="0"/>
            <column name="image" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
